<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fl_Discount"
    tools:context="mrapp.ixanov.sergey.mrapp.Fragments.Discount">

    <com.cleveroad.pulltorefresh.firework.FireworkyPullToRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/pullToRefresh"
        app:ptr_background="@drawable/background"
        app:ptr_fireworkStyle="modern"
        app:ptr_rocketAnimDuration="400">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <WebView  xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/webView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </ScrollView>
    </com.cleveroad.pulltorefresh.firework.FireworkyPullToRefreshLayout>
</FrameLayout>